{{outlet}}

<div class="ui segment two column middle aligned stackable grid">
  <div class="column" style="padding: 40px;">
    {{#if authenticationError}}
      <div class="ui ignored negative message">
        <div class="content">
          <p>Du har oppgitt feil brukernavn eller passord.</p>
        </div>
      </div>
    {{else if authenticationServiceUnavailable}}
      <div class="ui ignored negative message">
        <div class="content">
          <p>Innloggingstjenesten er dessverre ikke tilgjengelig for Ã¸yeblikket.</p>
        </div>
      </div>
    {{/if}}
    <div class="ui form">
      <form method="POST" action="http://admin-dev.nasjonalturbase.no/logg-inn/turbasen">
        <div class="field">
          <label>Epost</label>
          <div class="ui left icon input">
            {{input value=email placeholder="Epost" name="email"}}
            <i class="user icon"></i>
          </div>
        </div>
        <div class="field">
          <label>Passord</label>
          <div class="ui left icon input">
            {{input type="password" value=password name="password"}}
            <i class="lock icon"></i>
          </div>
        </div>
         {{#if isLoading}}
          <button class="ui blue submit button disabled">Logger inn...</button>
        {{else}}
          <button type="submit" class="ui blue submit button">Logg inn</button>
        {{/if}}
      </form>
    </div>
  </div>
  <div class="ui vertical divider">
    eller
  </div>
  <div class="center aligned column">
    {{!-- TODO: Move URL to controller and use action to log in using DNT Connect --}}
    <a href="/auth/login/dnt" class="ui big green right labeled icon button">
      DNT-bruker
      <i class="arrow right icon"></i>
    </a>
  </div>
</div>
