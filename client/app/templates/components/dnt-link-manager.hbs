<table class="ui table">
  <thead>
    <tr>
      <th class="five wide">Type</th>
      <th class="ten wide">Nettadresse</th>
      <th class="one wide">Fjern</th>
    </tr>
  </thead>
  <tbody>
    {{#each links as |link index|}}
      {{dnt-link-manager-list-item
        TYPE_CHOICES=TYPE_CHOICES
        link=link
        index=index
        validationRules=validationRules
        removeLink="removeLink"
        }}
      {{#if (is-equal link.type "Yr")}}
        <tr class="info">
          <td colspan="3">
            <i class="icon info"></i>
            URL-en til Yr brukes for å vise værvarsel fra Yr på UT og vises ikke som en lenke.
          </td>
        </tr>
      {{else if (is-equal link.type "Video")}}
        <tr class="info">
          <td colspan="3">
            <i class="icon info"></i>
            Videolenker må peke til en video på Vimeo eller Youtube for at den skal vises på UT.
          </td>
        </tr>
      {{else if (is-equal link.type "Annen")}}
        <tr class="info">
          <td colspan="3">
            <i class="icon info"></i>
            Lenker med type annen vil ikke vises på UT. For at den skal vises der må en annen type velges.
          </td>
        </tr>
      {{/if}}
    {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <th colspan="3">
        <button class="ui primary button" {{action "addLink"}}><i class="icon add"></i> Legg til lenke</button>
      </th>
    </tr>
  </tfoot>
</table>
